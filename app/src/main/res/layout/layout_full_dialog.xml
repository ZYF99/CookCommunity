<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_full_close"
            android:layout_width="44px"
            android:layout_height="44px"
            android:layout_margin="84px"
            android:elevation="3dp"
            android:src="@drawable/icon_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_fullscreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#B3000000"
            android:elevation="1dp">

            <FrameLayout
                android:id="@+id/fl_fullscreen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="150px"
                android:layout_marginTop="84px"
                android:layout_marginEnd="150px"
                android:layout_marginBottom="84px"
                android:background="@drawable/bg_card_corner_4dp"
                android:backgroundTint="@color/colorWhite"
                android:padding="2px" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>